@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.Product.HelpModel
@{
    Layout = null;
}
<abp-modal>
    <abp-modal-header title="About Product"></abp-modal-header>
    <abp-modal-body>
        <abp-container>
            <h3>Product</h3>
            <p>
                Product is an item or article that is manufactured or refined for sale.
            </p>
            <p>
                This module provide feature to manage products data.
            </p>
            <h4>Toolbar Actions</h4>
            <ul>
                <li><b>Help</b>. Show help guidance modal screen.</li>
                <li><b>Excel Export</b>. Export the data on grid to excel.</li>
                <li><b>Search Box</b>. Search the data on grid.</li>
                <li><b>Add</b>. Show modal screen to add new data.</li>
                <li><b>Edit</b>. Show modal screen to update selected data.</li>
                <li><b>Delete</b>. Show modal screen to delete selected data. Data that already used on transaction can not deleted.</li>
            </ul>
            <h4>Columns</h4>
            <ul>
                <li><b>Name</b>. Product name.</li>
                <li><b>Price</b>. Product unit price, used at purchase order.</li>
                <li><b>Retail Price</b>. Product retail unit price, used at sales order.</li>
                <li><b>Uom</b>. Product unit of measure.</li>
                <li><b>Tax Rate</b>. Product tax rate / tariff using percentage.</li>
            </ul>
        </abp-container>
    </abp-modal-body>
    <abp-modal-footer>
        <button class="btn-secondary btn" data-dismiss="modal" type="button">Close</button>
    </abp-modal-footer>
</abp-modal>