@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.Note.HelpModel
@{
    Layout = null;
}
<abp-modal>
    <abp-modal-header title="About Note"></abp-modal-header>
    <abp-modal-body>
        <abp-container>
            <h3>Note</h3>
            <p>
                Note is a small chunk of information that important to keep.
            </p>
            <p>
                This module provide feature to manage notes data.
            </p>
            <h4>Toolbar Actions</h4>
            <ul>
                <li><b>Help</b>. Show help guidance modal screen.</li>
                <li><b>Excel Export</b>. Export the data on grid to excel.</li>
                <li><b>Search Box</b>. Search the data on grid.</li>
                <li><b>Add</b>. Show modal screen to add new data.</li>
                <li><b>Edit</b>. Show modal screen to update selected data.</li>
                <li><b>Delete</b>. Show modal screen to delete selected data.</li>
            </ul>
            <h4>Columns</h4>
            <ul>
                <li><b>Description</b>. Note description.</li>
                <li><b>Customer</b>. Customer related with the note.</li>
            </ul>
        </abp-container>
    </abp-modal-body>
    <abp-modal-footer>
        <button class="btn-secondary btn" data-dismiss="modal" type="button">Close</button>
    </abp-modal-footer>
</abp-modal>