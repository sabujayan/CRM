@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.Calendar.HelpModel
@{
    Layout = null;
}
<abp-modal>
    <abp-modal-header title="About Calendar"></abp-modal-header>
    <abp-modal-body>
        <abp-container>
            <h3>Calendar</h3>
            <p>
                Calendar is a system of organizing days and schedule company activities.
            </p>
            <p>
                This module provide feature to manage calendars data.
            </p>
            <h4>Toolbar Actions</h4>
            <ul>
                <li><b>Help</b>. Show help guidance modal screen.</li>
                <li><b>Excel Export</b>. Export the data on grid to excel.</li>
                <li><b>Search Box</b>. Search the data on grid.</li>
                <li><b>Add</b>. Show modal screen to add new data.</li>
                <li><b>Edit</b>. Show modal screen to update selected data.</li>
                <li><b>Delete</b>. Show modal screen to delete selected data. Data that already used on transaction can not deleted.</li>
                <li><b>Calendar View</b>. Manage calendars using calendar view suite.</li>
            </ul>
            <h4>Columns</h4>
            <ul>
                <li><b>Name</b>. Name of calendar.</li>
                <li><b>Description</b>. Additional information regarding the calendar.</li>
                <li><b>Location</b>. Place where the calendar event took place.</li>
                <li><b>StartTime</b>. When the activity is starting.</li>
                <li><b>EndTime</b>. When the activity should be ending.</li>
                <li><b>IsDone</b>. Marking the activity is done or not.</li>
            </ul>
        </abp-container>
    </abp-modal-body>
    <abp-modal-footer>
        <button class="btn-secondary btn" data-dismiss="modal" type="button">Close</button>
    </abp-modal-footer>
</abp-modal>