@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.Vendor.UpdateModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Indo.Localization
@inject IHtmlLocalizer<IndoResource> l
@{
    Layout = null;
}
<form asp-page="/Vendor/Update">
    <abp-modal>
        <abp-modal-header title="@l["Update"].Value @l["Menu:PurchaseDataMasterVendor"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-container>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Vendor.Id"></abp-input>
                        <abp-input asp-for="Vendor.Name"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Vendor.Street"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Vendor.City"></abp-input>
                    </abp-column>
                    <abp-column>
                        <abp-input asp-for="Vendor.State"></abp-input>
                    </abp-column>
                    <abp-column>
                        <abp-input asp-for="Vendor.ZipCode"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Vendor.Phone"></abp-input>
                    </abp-column>
                    <abp-column>
                        <abp-input asp-for="Vendor.Email"></abp-input>
                    </abp-column>
                </abp-row>
            </abp-container>
        </abp-modal-body>
        <abp-modal-footer>
            <button class="btn-secondary btn" data-dismiss="modal" type="button">@l["Button:Cancel"]</button>
            <button class="btn-primary btn" data-busy-text="Saving..." type="submit"><i class="fa-check fa"></i> <span>@l["Button:Save"]</span></button>
        </abp-modal-footer>
    </abp-modal>
</form>