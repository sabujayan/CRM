@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.Vendor.HelpModel
@{
    Layout = null;
}
<abp-modal>
    <abp-modal-header title="About Vendor"></abp-modal-header>
    <abp-modal-body>
        <abp-container>
            <h3>Vendor</h3>
            <p>
                Vendor is third pary that can be a person or an organization. Vendor is a party where we buy product from them.
            </p>
            <p>
                This module provide feature to manage vendors data.
            </p>
            <h4>Toolbar Actions</h4>
            <ul>
                <li><b>Help</b>. Show help guidance modal screen.</li>
                <li><b>Excel Export</b>. Export the data on grid to excel.</li>
                <li><b>Search Box</b>. Search the data on grid.</li>
                <li><b>Add</b>. Show modal screen to add new data.</li>
                <li><b>Edit</b>. Show modal screen to update selected data.</li>
                <li><b>Delete</b>. Show modal screen to delete selected data. Data that already used on transaction can not deleted.</li>
            </ul>
            <h4>Columns</h4>
            <ul>
                <li><b>Name</b>. Vendor name.</li>
                <li><b>Street</b>. Vendor street address location.</li>
                <li><b>City</b>. Vendor city address location.</li>
                <li><b>State</b>. Vendor state address location.</li>
                <li><b>ZipCode</b>. Vendor zipcode / postal code.</li>
                <li><b>Phone</b>. Vendor phone number.</li>
                <li><b>Email</b>. Vendor email address.</li>
            </ul>
        </abp-container>
    </abp-modal-body>
    <abp-modal-footer>
        <button class="btn-secondary btn" data-dismiss="modal" type="button">Close</button>
    </abp-modal-footer>
</abp-modal>