@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.Service.HelpModel
@{
    Layout = null;
}
<abp-modal>
    <abp-modal-header title="About Service"></abp-modal-header>
    <abp-modal-body>
        <abp-container>
            <h3>Service</h3>
            <p>
                Service is a kind of product which is not physical. Customer buy service from us to fulfill their need such as for development, maintenance or others.
            </p>
            <p>
                This module provide feature to manage services data.
            </p>
            <h4>Toolbar Actions</h4>
            <ul>
                <li><b>Help</b>. Show help guidance modal screen.</li>
                <li><b>Excel Export</b>. Export the data on grid to excel.</li>
                <li><b>Search Box</b>. Search the data on grid.</li>
                <li><b>Add</b>. Show modal screen to add new data.</li>
                <li><b>Edit</b>. Show modal screen to update selected data.</li>
                <li><b>Delete</b>. Show modal screen to delete selected data. Data that already used on transaction can not deleted.</li>
            </ul>
            <h4>Columns</h4>
            <ul>
                <li><b>Name</b>. Name of service.</li>
                <li><b>Price</b>. Price unit of service.</li>
                <li><b>Uom</b>. Service unit of measure.</li>
                <li><b>Tax Rate</b>. Tax rate or tariff of service in percentage.</li>
            </ul>
        </abp-container>
    </abp-modal-body>
    <abp-modal-footer>
        <button class="btn-secondary btn" data-dismiss="modal" type="button">Close</button>
    </abp-modal-footer>
</abp-modal>