@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.Lead.CreateModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Indo.Localization
@inject IHtmlLocalizer<IndoResource> l
@{
    Layout = null;
}
<form asp-page="/Lead/Create">
    <abp-modal>
        <abp-modal-header title="@l["New"].Value @l["Menu:CustomerManagementTransactionLead"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-container>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Customer.Name"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Customer.Street"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Customer.City"></abp-input>
                    </abp-column>
                    <abp-column>
                        <abp-input asp-for="Customer.State"></abp-input>
                    </abp-column>
                    <abp-column>
                        <abp-input asp-for="Customer.ZipCode"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Customer.Phone"></abp-input>
                    </abp-column>
                    <abp-column>
                        <abp-input asp-for="Customer.Email"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-select asp-for="Customer.LeadSourceId"></abp-select>
                    </abp-column>
                    <abp-column>
                        <abp-select asp-for="Customer.LeadRatingId"></abp-select>
                    </abp-column>
                </abp-row>
            </abp-container>
        </abp-modal-body>
        <abp-modal-footer>
            <button class="btn-secondary btn" data-dismiss="modal" type="button">@l["Button:Cancel"]</button>
            <button class="btn-primary btn" data-busy-text="Saving..." type="submit"><i class="fa-check fa"></i> <span>@l["Button:Save"]</span></button>
        </abp-modal-footer>
    </abp-modal>
</form>