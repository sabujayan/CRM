@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.Contact.HelpModel
@{
    Layout = null;
}
<abp-modal>
    <abp-modal-header title="About Contact"></abp-modal-header>
    <abp-modal-body>
        <abp-container>
            <h3>Contact</h3>
            <p>
                Contact is a contact person who provide a link of information and representation of customer.
            </p>
            <p>
                This module provide feature to manage contacts data.
            </p>
            <h4>Toolbar Actions</h4>
            <ul>
                <li><b>Help</b>. Show help guidance modal screen.</li>
                <li><b>Excel Export</b>. Export the data on grid to excel.</li>
                <li><b>Search Box</b>. Search the data on grid.</li>
                <li><b>Add</b>. Show modal screen to add new data.</li>
                <li><b>Edit</b>. Show modal screen to update selected data.</li>
                <li><b>Delete</b>. Show modal screen to delete selected data.</li>
            </ul>
            <h4>Columns</h4>
            <ul>
                <li><b>Name</b>. Contact name.</li>
                <li><b>Street</b>. Contact street address location.</li>
                <li><b>City</b>. Contact city address location.</li>
                <li><b>State</b>. Contact state address location.</li>
                <li><b>ZipCode</b>. Contact zipcode / postal code.</li>
                <li><b>Phone</b>. Contact phone number.</li>
                <li><b>Email</b>. Contact email address.</li>
                <li><b>Customer</b>. Customer related to this contact.</li>
            </ul>
        </abp-container>
    </abp-modal-body>
    <abp-modal-footer>
        <button class="btn-secondary btn" data-dismiss="modal" type="button">Close</button>
    </abp-modal-footer>
</abp-modal>