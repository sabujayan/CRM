@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.CustomerInvoice.UpdateDetailModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Indo.Localization
@inject IHtmlLocalizer<IndoResource> l
@{
    Layout = null;
}
<form asp-page="/CustomerInvoice/UpdateDetail">
    <abp-modal>
        <abp-modal-header title="@l["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-container>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="CustomerInvoiceDetail.Id"></abp-input>
                        <abp-select asp-for="CustomerInvoiceDetail.CustomerInvoiceId"></abp-select>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="CustomerInvoiceDetail.ProductName"></abp-input>
                    </abp-column>
                    <abp-column>
                        <abp-select asp-for="CustomerInvoiceDetail.UomId"></abp-select>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="CustomerInvoiceDetail.Price"></abp-input>
                    </abp-column>
                    <abp-column>
                        <abp-input asp-for="CustomerInvoiceDetail.Quantity"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="CustomerInvoiceDetail.TaxRate"></abp-input>
                    </abp-column>
                    <abp-column>
                        <abp-input asp-for="CustomerInvoiceDetail.DiscAmt"></abp-input>
                    </abp-column>
                </abp-row>
            </abp-container>
        </abp-modal-body>
        <abp-modal-footer>
            <button class="btn-secondary btn" data-dismiss="modal" type="button">@l["Button:Cancel"]</button>
            <button class="btn-primary btn" data-busy-text="Saving..." type="submit" disabled="@(Model.Status != Indo.CustomerInvoices.CustomerInvoiceStatus.Draft)"><i class="fa-check fa"></i> <span>@l["Button:Save"]</span></button>
        </abp-modal-footer>
    </abp-modal>
</form>