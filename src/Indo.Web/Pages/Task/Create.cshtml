@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.Tasks.CreateModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Indo.Localization
@inject IHtmlLocalizer<IndoResource> l
@{
    Layout = null;
}
<form asp-page="/Task/Create">
    <abp-modal>
        <abp-modal-header title="@l["New"].Value @l["Menu:CustomerManagerTransactionTask"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-container>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Task.Name"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Task.Description"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-select asp-for="Task.ActivityId"></abp-select>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-select asp-for="Task.CustomerId"></abp-select>
                    </abp-column>
                    <abp-column>
                        <abp-input asp-for="Task.Location"></abp-input>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <div class="form-group">
                            <label asp-for="Task.StartTime"></label>
                            <span>*</span>
                            <input asp-for="Task.StartTime" />
                            <span asp-validation-for="Task.StartTime"></span>
                        </div>
                    </abp-column>
                    <abp-column>
                        <div class="form-group">
                            <label asp-for="Task.EndTime"></label>
                            <span>*</span>
                            <input asp-for="Task.EndTime" />
                            <span asp-validation-for="Task.EndTime"></span>
                        </div>
                    </abp-column>
                </abp-row>
                <abp-row>
                    <abp-column>
                        <abp-input asp-for="Task.IsDone"></abp-input>
                    </abp-column>
                </abp-row>
            </abp-container>
        </abp-modal-body>
        <abp-modal-footer>
            <button class="btn-secondary btn" data-dismiss="modal" type="button">@l["Button:Cancel"]</button>
            <button class="btn-primary btn" data-busy-text="Saving..." type="submit"><i class="fa-check fa"></i> <span>@l["Button:Save"]</span></button>
        </abp-modal-footer>
    </abp-modal>
</form>