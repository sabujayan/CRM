@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Indo.Web.Pages.Booking.HelpModel
@{
    Layout = null;
}
<abp-modal>
    <abp-modal-header title="About Booking"></abp-modal-header>
    <abp-modal-body>
        <abp-container>
            <h3>Booking</h3>
            <p>
                Booking is an act of reserving valuable resource.
            </p>
            <p>
                This module provide feature to manage bookings data.
            </p>
            <h4>Toolbar Actions</h4>
            <ul>
                <li><b>Help</b>. Show help guidance modal screen.</li>
                <li><b>Excel Export</b>. Export the data on grid to excel.</li>
                <li><b>Search Box</b>. Search the data on grid.</li>
                <li><b>Add</b>. Show modal screen to add new data.</li>
                <li><b>Edit</b>. Show modal screen to update selected data.</li>
                <li><b>Delete</b>. Show modal screen to delete selected data. Data that already used on transaction can not deleted.</li>
                <li><b>Calendar View</b>. Manage bookings using calendar view suite.</li>
            </ul>
            <h4>Columns</h4>
            <ul>
                <li><b>Name</b>. Name of booking.</li>
                <li><b>Description</b>. Additional information regarding the booking.</li>
                <li><b>Location</b>. Place where the booking took place.</li>
                <li><b>StartTime</b>. When the booking is starting.</li>
                <li><b>EndTime</b>. When the booking should be ending.</li>
                <li><b>IsDone</b>. Marking the booking is done or not.</li>
                <li><b>Resource</b>. Shared valuable things or items like cars or meeting rooms.</li>
            </ul>
        </abp-container>
    </abp-modal-body>
    <abp-modal-footer>
        <button class="btn-secondary btn" data-dismiss="modal" type="button">Close</button>
    </abp-modal-footer>
</abp-modal>